generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              String   @id @default(cuid())
  name            String
  phone           String
  deliveryMethod  String   // "pickup" o "delivery"
  address         String?
  frameStyle      Int      // 1-5 (índice de imagen)
  color           String?  // Color único opcional
  verse           String?  // versículo predefinido o null
  customMessage   String?  // mensaje personalizado
  paymentProof    String?  // URL del comprobante
  status          String   @default("pending") // "pending", "confirmed", "completed", "cancelled"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("orders")
}
